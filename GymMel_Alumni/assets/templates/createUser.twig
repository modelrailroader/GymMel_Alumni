<div class="container mt-5">
    <div id="alert"></div>
    <h1>Benutzer erstellen</h1>
    <div style="margin-top: 40px"></div>
    <form id="createUserForm" autocomplete="off" action="#" method="post">
        <input type="text" id="preventAutoComplete" style="display:none">
        <input type="password" id="preventAutoComplete" style="display:none">
        <div class="mb-3">
            <label for="username" class="form-label">
                <i class="bi bi-person"></i>&nbsp; Benutzername:
            </label>
            <div class="required-field-block">
                <input type="text" class="form-control" id="username" name="username" required>
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">
                <i class="bi bi-envelope-at"></i>&nbsp; E-Mail-Adresse:
            </label>
            <div class="required-field-block">
                <input type="email" class="form-control" id="email" name="email" required>
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
        </div>
        <div class="mb-3" id="passwordDiv">
            <label for="password" class="form-label">
                <i class="bi bi-key"></i>&nbsp; Passwort:
            </label>
            <div class="required-field-block input-group">
                <span class="input-group-text" id="togglePassword" data-icon="passwordToggleIcon" data-input="password">
                    <i class="bi bi-eye-slash" id="passwordToggleIcon"></i>
                </span>
                <input type="password" class="form-control" id="password" name="password" required>
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
            <small id="helpTextPassword" style="color: red"></small>
        </div>
        <div class="mb-3" id="confirmPasswordDiv">
            <label for="confirmPassword" class="form-label">
                <i class="bi bi-key"></i>&nbsp; Passwort best√§tigen:
            </label>
            <div class="required-field-block input-group">
                <span class="input-group-text" id="togglePassword" data-input="confirmPassword"
                      data-icon="confirmPasswordToggleIcon">
                    <i class="bi bi-eye-slash" id="confirmPasswordToggleIcon"></i>
                </span>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                <div class="required-icon">
                    <div class="text">*</div>
                </div>
            </div>
            <small id="helpTextConfirmPassword" style="color: red"></small>
        </div>
        <div style="margin-top: 20px"></div>

        <button type="submit" id="submit" name="submit" class="btn btn-primary">Benutzer erstellen</button>
    </form>
</div>

<div style="margin-top: 50px;"></div>
